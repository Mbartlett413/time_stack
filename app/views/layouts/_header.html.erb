<table class="header">
	<tr>
		<td>
		
			<% if current_user.nil?%>
	      <a href="/", class ="header_logo" ><%= image_tag "RSILogo.png" %></a>
	    <% else %> 
	    	<% if !current_user.customer_id.nil? %>

		    	<% customer = Customer.find(current_user.customer_id)%>
		      <% if !customer.logo.blank?%>
		        <a href="/", class="header_logo"><%= image_tag "#{customer.logo}" %></a>
		      <% else %>
		      	<a href="/", class="header_logo"><%= image_tag "RSILogo.png" %></a>
		      <% end %>
		    <% else %>
		    	  <a href="/", class="header_logo"><%= image_tag "RSILogo.png" %></a>
	    	<% end %>
	    <% end %>
		</td>
		<td>
		<% if !current_user.nil? %>
			<span style="float:left;margin-top:5px;"><%= link_to current_user.email, "/user_profile" %></span><%= button_to 'Logout', destroy_user_session_path, :method => :delete, style: "float:right;" %>
		<% else %>
			<%= link_to "Sign In", new_user_session_path %>
		<% end %>
		</td>
	</tr>
</table>
