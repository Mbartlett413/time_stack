<table class="header">
	<tr>
		<td>
		
			<% if current_user.nil?%>
	      <a href="/", class ="header_logo" ><%= image_tag "/assets/timestack", class: 'logo' %></a>
	    <% else %> 
	    	<% if !current_user.customer_id.nil? %>

		    	<% customer = Customer.find(current_user.customer_id)%>
		      <% if !customer.logo.blank?%>
		        <a href="/", class="header_logo"><%= image_tag "#{customer.logo}", class: 'logo' %></a>
		      <% else %>
		      	<a href="/", class="header_logo"><%= image_tag "/assets/timestack", class: 'logo' %></a>
		      <% end %>
		    <% else %>
		    	  <a href="/", class="header_logo"><%= image_tag "/assets/timestack", class: 'logo' %></a>
	    	<% end %>
	    <% end %>
		</td>
		<td>
		<% if !current_user.nil? && current_user.admin? %>
		     <span style="float:right;margin-top:-25px;"><%= link_to current_user.email, "/user_profile" %></span><span style="float:right; margin: 5px;"><%= button_to 'Logout', destroy_user_session_path, :method => :delete, style: "float:right;" %></span><span style="float:right; margin: 5px;"><a href= "/admin" %><%= button_to "Admin" %></span>
		<% elsif !current_user.nil? %>
			<span style="float:right;margin-top:-25px;"><%= link_to current_user.email, "/user_profile" %></span><%= button_to 'Logout', destroy_user_session_path, :method => :delete, style: "float:right;" %>
		<% else %>

		<% end %>
		</td>
	</tr>
</table>
