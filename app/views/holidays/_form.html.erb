<%= form_for @holiday do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label "Date Of Holiday This Year"%>
	<%= f.date_field :date, required: "required" %>
	<% if current_user.admin && @customer == true %>
	  <div class="row">
		<div class="small-4 columns"><%= f.label "Global Holiday?" %></div>
		<div class="small-1 columns"><%= f.check_box :global %></div>
		<div class="small-7 columns"></div>
	  </div>
	<% elsif current_user.admin && @customer == false %>
		<%= f.hidden_field :global, value: true %>
	<% else %>
		<%= f.hidden_field :global, value: false %>
	<% end %>
	<%= f.submit "Submit Holiday", class: "button small" %>
<% end %>
