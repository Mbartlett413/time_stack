
== render 'form'
= link_to 'Set Theme', "/customers/#{params[:customer_id]}/theme", class: "orange-button"	    
br
= link_to 'Report', "/customers/#{@customer.id}/customer_reports", id: 'show_report', class: 'orange-button'
br
= link_to 'Destroy', @customer, data: {:confirm => 'Are you sure?'}, :method => :delete,  class: 'orange-button'
br
= link_to "Manage Projects", "projects",  class: "orange-button"
br
- if current_user.proxy
  = link_to "Manage Proxy Projects", "/users/#{current_user.id}/proxies", class: "orange-button" 
  br
- if user_have_adhoc_permission(current_user)
  = link_to "Adhoc PM", projects_path(adhoc: true), class: "orange-button" 
  br
= link_to "User Report", "/show_user_reports/#{current_user.id}", class: "orange-button"
br
= link_to "Vacation Request", "/vacation_request", class: "orange-button"
br
- if current_user.admin?
  = link_to "Admin", "/admin", class: "orange-button" 
  br
= link_to 'Back to Customer List', customers_path, class: "orange-button"




