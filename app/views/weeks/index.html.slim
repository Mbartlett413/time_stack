h1 class="row" Weeks Defined

table class="border"
  thead
    tr
      th Start date
      th End date
      th Status
      th Report
      
  tbody
    - @weeks.each do |week|
      tr
        td = week.start_date
        td = week.end_date
        td = link_to find_status(UserWeekStatus.first_for_user(current_user.id, week.id)), find_status(UserWeekStatus.first_for_user(current_user.id,week.id)) == "NEW"  ? edit_week_path(week): week_path(week)   
		td = link_to "Report", "/weeks/#{week.id}/report" if find_status(UserWeekStatus.first_for_user(current_user.id,week.id)) == "SUBMITTED"
br
